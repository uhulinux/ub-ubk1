#!/bin/sh -eux

./configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
	--disable-debug \
    --disable-static \
    --disable-programs \
    --disable-doc \
    --enable-shared \
	--enable-avfilter\
	--enable-avisynth \
	--enable-avresample \
	--enable-frei0r \
	--enable-fontconfig \
	--enable-gnutls \
	--enable-gpl \
	--enable-gray \
	--enable-libass \
	--enable-libbluray \
	--enable-libcdio \
	--enable-libcaca \
	--enable-libcelt \
	--enable-libdc1394 \
	--enable-libdcadec \
	--enable-libfreetype \
	--enable-libfaac \
	--enable-libgsm \
	--enable-libmodplug \
	--enable-libmp3lame \
	--enable-libopencore-amrnb \
	--enable-libopencore-amrwb \
	--enable-libopenjpeg \
	--enable-libpulse \
	--enable-libschroedinger \
	--enable-libspeex \
	--enable-libtheora \
	--enable-libv4l2 \
	--enable-libvorbis \
	--enable-libvpx \
	--enable-libx264 \
	--enable-libx265 \
	--enable-libxvid \
	--enable-libzvbi \
	--enable-nonfree \
	--enable-openal \
	--enable-opengl \
	--enable-openssl \
	--enable-pic \
	--enable-pthreads \
	--enable-postproc \
	--enable-swresample \
	--enable-swscale \
	--enable-version3 \
	--enable-x11grab \
	--disable-libopencv
ub_make

